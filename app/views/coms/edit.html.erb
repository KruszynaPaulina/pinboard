<div class="row"> 
<div class="col-md-offset-3 col-md-6">
    <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert alert-info") %>
    <% end %>
</div>
</div>

<div class="row"> 
    <div class="col-md-offset-3 col-md-6"> 
        <div class="panel panel-default"> 

            <div class="panel-heading">
                <h1 class="f1"> Edytuj komentarz </h1>
            </div>
            
            <div class="panel-body">
            <%= form_for([@pin, @com]) do |f| %>
            <%= f.label :content, "Treść komentarza, który chcesz edytować:" %><br />
            <%= f.text_area :content, class: 'form-control'%><br />
            <%= f.submit 'Zmień komentarz', class: 'btn btn-primary btn-block' %>
            <% end %>
            </div>
            
            <div class="panel-footer">
            <%= link_to 'Wróć do pinu', @pin, class: 'btn btn-primary' %>
            </div>

       </div>
    </div>
</div>