<div class="row"> 
<div class="col-md-offset-3 col-md-6">
    <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert alert-info") %>
    <% end %>
</div>
</div>

<div class="q1"><%= devise_error_messages! %></div>

<div class="row"> 
<div class="col-md-offset-3 col-md-6"> 
<div class="panel panel-default">

<div class="panel-heading">
  <h2 class="f1 v1">Rejestracja</h2>
</div>

<div class="panel-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <div class="form-group"> 
  <%= f.label :login, "Login:" %><br />
  <%= f.text_field :login, autofocus: true, class: 'form-control' %> 
  </div>
  
  <div class="form-group"> 
  <%= f.label :avatar, "Avatar:" %><br />
  <%= f.file_field :avatar, autofocus: true, class: 'form-control' %> 
  </div>

  <div class="form-group">
    <%= f.label :email, "Email:" %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Hasło:" %>
    <% if @minimum_password_length %>
    (minimum <%= @minimum_password_length %> znaków)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Potwierdź hasło:" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Wyślij", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
</div>

<div class="panel-footer">
<%= render "devise/shared/links" %>
<%= link_to 'Powrót', pins_path, class: 'btn btn-primary' %>
</div>

</div>
</div>
</div>
