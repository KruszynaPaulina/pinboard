<div class="row"> 
<div class="col-md-offset-3 col-md-6">
    <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert alert-info") %>
    <% end %>
</div>
</div>
<div class="q1"> <%= devise_error_messages! %> </div>

<div class="row"> 
<div class="col-md-offset-3 col-md-6"> 
<div class="panel panel-default">

<div class="panel-heading">
  <h2 class="f1">Edycja profilu</h2>
</div>

<div class="panel-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>


  <div class="form-group"> 
  <%= f.label :login, "Login:" %><br />
  <%= f.text_field :login, autofocus: true, class: 'form-control' %> 
  </div>

  <div class="form-group">
    <%= f.label :email, "Email:" %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, "Hasło:" %> (pozostaw puste, jeżeli nie chcesz go zmieniać)<br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    <% if @minimum_password_length %>
    (minimum <%= @minimum_password_length %> znaków)
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Powtórz hasło:" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Bieżące hasło:" %> (potrzebne do zatwierdzenia zmian)<br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Zmień", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<br />
<h1 class="f1">Usuń konto</h1>

<p>Nie jesteś zadowolony? 
<%= button_to "Usuń konto", registration_path(resource_name), data: { confirm: "Jesteś pewien?" }, method: :delete, class: 'btn btn-primary btn-block' %></p>

</div>

<div class="panel-footer">
<%= link_to "Powrót", :back, class: 'btn btn-primary' %>
</div>

</div>
</div>
</div>
