<div class="row"> 
<div class="col-md-offset-3 col-md-6">
    <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert alert-info") %>
    <% end %>
</div>
</div>

<div class="row"> 
<div class="col-md-offset-3 col-md-6"> 
<div class="panel panel-default"> 
<div class="panel-heading">
  <div class="p1"> 
  
    <div class="row"> 
            <div class="col-md-2"> 
            
                  <div class="pinezka">
                    <%= image_tag @pin.user.avatar.url(:thumb) %>
                  </div>
              
            </div>
            
            <div class="col-md-5"> 
            
                  <div class="v1"> 
                    Pin przypięty przez:<br />
                    <p class="hm"><%= link_to @pin.user.login, user_path(@pin.user.id) %></p>
                  </div>
                  
            </div>
            
            <div class="col-md-3">
              
              <div class="q3 v1">
              <span class="glyphicon glyphicon glyphicon-calendar" aria-hidden="true"></span> <%= @pin.created_at.strftime('%d-%m-%Y') %><br />
              <span class="glyphicon glyphicon glyphicon-time" aria-hidden="true"></span> <%= @pin.created_at.strftime('%H:%M') %>
              </div>
            
            </div>
            
            
            <div class="col-md-2">
              <div class="m2">
                <%= link_to '', pins_path, class: 'btn btn-info glyphicon glyphicon-remove v2' %>
              </div> 
            </div>
    </div>
    
  </div></div>
<div class="panel-body">
  <div class="obraz">
    <%= image_tag @pin.image.url(:large) %>
  </div>
  <div class="tytul">
    <h1><%= @pin.title %></h1>
  </div>
  <div class="opis_pinu">
    <h4><strong>
      Opis pinu: 
    </strong></h4> 
    <%= @pin.description %>
  </div>
  
  
<div class="p1">
  <h4><strong> Komentarze: </strong>( <%= @pin.coms.count %> <span class="glyphicon glyphicon glyphicon-comment" aria-hidden="true"></span> )
  </h4>
  <div class="coms">
  <%= render @pin.coms %>
  </div>
  <div class="q1"><h4><strong>
        Chcesz dodać komentarz? 
        </strong>
      </h4>
      </div>
    <% if user_signed_in? %>
    
      <%= render "coms/form" %>
    <% else %> 
      <div>
      <%= link_to 'Zaloguj się', new_user_session_path, class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
</div>

</div>
<div class="panel-footer">
<% if @pin.user == current_user %>
<%= link_to 'Edytuj pin', edit_pin_path(@pin), class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Powrót', pins_path, class: 'btn btn-primary' %>

</div> 
</div> 
</div> 
</div>
