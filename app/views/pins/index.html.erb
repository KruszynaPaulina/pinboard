<div id="pins" class="transitions-enabled">
      
      <% @pins.each do |pin| %>
          
          <div class="box panel panel-default">
              
            <%= link_to image_tag(pin.image.url(:medium)), pin %>
              
              <div class="panel-body">
                  <p class="center"</p><%= pin.title %></p>
                  <hr />
                  Dodane przez: <strong><%= pin.user.login if pin.user %></strong> <br/>
                </div>
                      <% if pin.user == current_user %>
                      <div class="panel-footer">
                          <%= link_to 'Edytuj', edit_pin_path(pin) %> |
                          <%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Czy jesteś pewien, że chcesz usunąć ten pin?' } %><br />
                      </div>
                      <% end %>
          </div>
      
      <% end %>
</div>

    


